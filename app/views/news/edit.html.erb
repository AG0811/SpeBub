<%= form_with(model: @news, url: news_path(@news), method: :patch, local: true) do |form| %>
  <div class="field">
    <%= form.label :author_name %>
    <%= form.text_field :author_name, placeholder: @user.username, value: @user.username %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: 'タイトル' %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, placeholder: '記事内容' %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, @categories, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :prefecture_id %>
    <%= form.collection_select :prefecture_id, @prefectures, :id, :name, { selected: @user.address_id } %>
  </div>

  <div class="actions">
    <%= form.submit '更新する' %>
  </div>
<% end %>