<div class="comments-wrapper">
  <div class="container">
    <% if @user && user.address_id == @news.prefecture_id %>
      <%= form_with(model: [@news, @comment], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
        <%= form.submit "SEND" %>
      <% end %>
    <% else %>
      <strong><p>※※※ 閲覧のみ有効です ※※※</p></strong>
    <% end %>
  </div>

  <div class="comments">
    <h4>＜コメント一覧＞</h4>
    <% @comments.each do |comment| %>
      <p>
        <strong><%= link_to comment.user.username, "/users/#{comment.user_id}" %>：</strong>
        <%= comment.text %>
      </p>
    <% end %>
  </div>
</div>